<div class="login-page">
<%= form_for @provider, :url => {:controller => 'providers', :action => 'update' } do |f| %>
          <%= render 'providers/shared/success_message' %>
          <%= render 'providers/shared/error_messages' %>
          <div class="field">
          <%= f.label "practice name" %>
          <%= f.text_field :practiceName %>
          </div>
          
          <div class="field">
          <%= f.label :address %>
          <%= f.text_field :address %>
          </div>
          
          <div class="field">
          <%= f.label :phone %>
          <%= f.text_field :phone %>
          </div>
          
           <div class="field" style="display: flex;">
            <%= f.label :Medicaid %>
            <%= f.check_box :insurance, {:multiple => true}, "Medicaid", nil %> 
            
            <%= f.label "Title-19" %>
            <%= f.check_box :insurance, {:multiple => true}, "Title", nil %>
            
            <%= f.label "Hawkeye" %>
            <%= f.check_box :insurance, {:multiple => true}, "Hawkeye", nil %>
           </div>
          
          <div class="field">
          <%= f.label :description %>
          <em>(not exceeding 250 words)</em><br />
          <%= f.text_area :description, class: "textbox", id: 'textbox', cols: "32", rows: "10" %><br />
          </div>
          <span id="count">Word count: <span id="wordCount"></span></span>
          
          <div class="actions">
          <%= f.submit 'Update' %>
          </div>
<% end %>
</div>
<%= javascript_include_tag "textbox" %>