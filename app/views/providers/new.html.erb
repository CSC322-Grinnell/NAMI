
<div class="login-page">
 
<%= form_for @provider, url: '/providers/create', html: { method: :post, id: 'new_user', class: 'container'} do |f| %>
  <%= render 'providers/shared/error_messages' %>
  <div class="field">
    <%= f.label :"name" %><br />
    <%= f.text_field :name %><br />
  </div>
  
  <div class="field">
     <%= f.label :address %><br />
     <%= f.text_field :address %><br />
  </div>
  
  <div class="field">
     <%= f.label :phone %><br />
     <%= f.text_field :phone %><br />
  </div>
  
  <div class="field">
       <div class="field checkbox_field">
      		 <%= f.label :insurance %>
           <% @insurance_params.each do |i| %>
           <div class="checkbox_div">
           <%= f.label i %>
           <%= f.check_box :insurances, {:multiple => true}, i, nil %>
           </div>
           <% end %>
       </div>
  </div>
  
  <div class="field">
      <div class="field checkbox_field">
      	<%= f.label :waivers %>
      	<div class="field checkbox_field">
       	<% @waiver_params.each do |w| %>
       	<div class="checkbox_div">
        <%= f.label w %>
        <%= f.check_box :waivers, {:multiple => true}, w, nil %>
       </div>
       <% end %>
    </div>
  </div>

   <div class="field">
    <%= f.label :description %>
    <em>(not exceeding 250 words)</em><br />
     <%= f.text_area :description, class: "textbox", id: 'textbox', cols: "32", rows: "10"%><br />
  </div>
  <span id="count">Word count: <span id="wordCount"></span></span>

    <%= hidden_field_tag "provider[id]", "#{current_user.id}" %>
  <div class="actions">
    <%= f.submit "Submit profile" %>
  </div>
<% end %>
</div>
<%= javascript_include_tag "textbox" %>
